<%= render "shared/header" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <h5 class="card-header py-3">Pregled tipa treninga</h5>
        <table class="table table-bordered">
          <tbody>
          <tr>
            <th scope="row">Naziv</th>
            <td><%= @workout_type.name %></td>
          </tr>
          <tr>
            <th scope="row">Opis</th>
            <td><%= @workout_type.description %></td>
          </tr>
          </tbody>
        </table>
        <%= link_to "Izmeni", edit_workout_type_path(@workout_type), class: "btn btn-warning" %>
        <%= link_to 'Nazad', workout_types_path, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
</div>