<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Workout diary", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   '/' %></li>
        
        <% if is_logged_in? %>
          <li class="nav navbar-nav navbar-right">
            <%=  link_to "Dodaj trening", new_workout_path %>
          </li>
          <% if is_current_user_of_type?('admin_user') %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%=  link_to "Moj nalog", user_path(current_user), class: "dropdown-item"  %></li>
                <li><%=  link_to "Administracija korisnika", users_path, class: "dropdown-item"  %></li>
                
                <li><%=  link_to "Uredi tipove treninga", workout_types_path, class: "dropdown-item"  %></li>
                <li><%=  link_to "Uredi tipove opreme", equipment_types_path, class: "dropdown-item"  %></li>
                
                <li><%=  link_to "Uredi treninge", workouts_path, class: "dropdown-item"  %></li>
              </ul>
            </li>
          <%  else  %>
          <li class="nav-item">
              <%=  link_to "Moj nalog", user_path(current_user), class: "nav-link active"  %>
            </li>
          <% end %>
          
          <li>
            <%= link_to "Odjava", {:controller => :sessions, :action => 'destroy', :id => current_user.id }, :method => :delete %>
          </li>
        <% else %>
          <li class="item">
            <%= link_to "Prijava", login_path %>
          </li>
          <li class="item">
            <%= link_to "Registracija", register_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>