<%= form_with model: exercise, local: true, data: { turbo: false } do |form| %>
  <%= form.hidden_field :workout_id, value: workout.id %>

  <div class="mb-3">
    <%= form.label "Oprema potrebna za izvodjenje vezbe" %><br>
    <%= select_tag 'equipment[equipment_ids]', options_for_select(@equipment.collect{ |eq| [eq.name, eq.id] }, @exercise.equipment_ids), { :multiple => true, :class => "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label "Naziv vezbe" %><br>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label "Opis vezbe" %><br>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "Pauza izmedju serija (u minutima)" %><br>
    <%= form.text_field :rest_time, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>