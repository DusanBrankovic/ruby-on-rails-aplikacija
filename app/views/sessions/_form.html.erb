<%= form_with controller: :sessions, url: sessions_path, local: true, data: { turbo: false } do |form| %>
  <div class="mb-3">
    <%= form.label :email_address %><br>
    <%= form.email_field :email_address, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :password %><br>
    <%= form.password_field :password, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.submit class: "btn btn-info w-100" %>
  </div>
<% end %>