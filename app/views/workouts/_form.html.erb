<%= form_with model: workout, local: true, data: { turbo: false } do |form| %>
  <div class="mb-3">
    <%= form.label "Tip treninga" %><br>
    <%= select_tag 'workout_types', options_for_select(@workout_types.collect{ |wt| [wt.name, wt.id] }, @workout.workout_type_ids), { :multiple => true, :class => "form-control" } %>
  </div>

  <div class="mb-3">
    <%= form.label "Naziv treninga" %><br>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label "Opis treninga" %><br>
    <%= form.text_area :description, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>